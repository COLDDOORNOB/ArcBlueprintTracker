rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Custom container screenshots - allow public uploads
    match /custom_containers/{fileName} {
      // Anyone can upload images (for container submissions)
      allow write: if request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      
      // Anyone can read/download
      allow read: if true;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

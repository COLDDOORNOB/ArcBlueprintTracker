:root {
  --cardSize: 170px;
}

body {
  overflow-y: scroll;
  /* Always show scrollbar to prevent layout shift */
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #09090b;
}

::-webkit-scrollbar-thumb {
  background: #27272a;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #3f3f46;
}

/* Range Slider */
input[type=range] {
  -webkit-appearance: none;
  appearance: none;
  background: transparent;
}

input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 16px;
  width: 16px;
  border-radius: 50%;
  background: #e4e4e7;
  cursor: pointer;
  margin-top: -6px;
}

input[type=range]::-webkit-slider-runnable-track {
  width: 100%;
  height: 4px;
  cursor: pointer;
  background: #27272a;
  border-radius: 2px;
}

/* Card Styles */
.rarity-frame {
  border-radius: 18px;
  border: 1px solid transparent;
  padding: 1px;
  /* The border width */
  transition: all 0.2s ease;
}

.rarity-glow::before {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 18px;
  padding: 1px;
  background: inherit;
  -webkit-mask:
    linear-gradient(#fff 0 0) content-box,
    linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0.5;
  pointer-events: none;
}

.card-compact:hover .rarity-frame {
  box-shadow: 0 0 12px var(--glow-color);
}

/* Type Pill - Responsive Scaling */
.type-tab {
  position: absolute;
  bottom: 5px;
  left: 5px;
  border-radius: 999px;
  padding: clamp(6px, calc(var(--cardSize)/26), 12px) clamp(8px, calc(var(--cardSize)/20), 14px);
  display: flex;
  align-items: center;
  gap: clamp(6px, calc(var(--cardSize)/30), 10px);
  border: 1px solid rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(12px);
  background: rgba(24, 24, 27, 0.40);
  white-space: nowrap;
  max-width: calc(var(--cardSize) - 24px);
  overflow: hidden;
  text-overflow: ellipsis;
}

.type-tab img {
  width: clamp(16px, calc(var(--cardSize)/18), 24px);
  height: clamp(16px, calc(var(--cardSize)/18), 24px);
  flex: 0 0 auto;
  image-rendering: -webkit-optimize-contrast;
}

.type-tab span {
  font-size: clamp(11px, calc(var(--cardSize)/18), 13px);
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Details Overlay */
.details-overlay {
  position: absolute;
  top: calc(100% + 8px);
  left: 50%;
  transform: translateX(-50%);
  width: fit-content;
  min-width: 320px;
  max-width: min(630px, calc(100vw - 24px));
  z-index: 2000;
  border-radius: 16px;
  padding: 14px 14px;
  border: 1px solid rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(12px);
  background: rgba(24, 24, 27, 0.40);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.55);
}

.details-row {
  display: grid;
  grid-template-columns: 110px auto;
  gap: 8px;
  padding: 4px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.06);
}

.details-row:last-child {
  border-bottom: none;
}

.details-label {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 600;
  padding-top: 2px;
}

.details-value {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.details-confidence {
  display: flex;
  align-items: center;
  gap: 6px;
}

.confidence-dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
}

/* Filter Chips (Active) */
.chip {
  padding: 4px 10px;
  font-size: 12px;
  border-radius: 99px;
  background: #27272a;
  color: #a1a1aa;
  border: 1px solid #3f3f46;
  transition: all 0.2s;
  white-space: nowrap;
}

.chip:hover {
  background: #3f3f46;
  color: #fff;
}

.chip-active {
  background: #fafafa;
  color: #18181b;
  border-color: #fff;
  font-weight: 500;
}